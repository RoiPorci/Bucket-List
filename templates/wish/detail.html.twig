{% extends 'base.html.twig' %}

{% block title  %}{{ parent() }}Detail{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="card col-lg-8 p-0 bg-light">
                <div class="card-body text-center p-0">
                    <h1 class="card-header dark-blue text-white mb-2 ms-0"><i class="fas fa-star text-warning"></i> {{ wish.title }}</h1>
                    <h3 class="card-text">
                        {% for category in wish.categories %}
                            {{ category.name }}
                        {% endfor %}
                    </h3>
                    <blockquote class="blockquote mb-0 mx-2">
                        <p class="">{{ wish.description }}</p>
                        <footer class="blockquote-footer my-1"><span class="card-title h5">{{ wish.author }}</span><cite title="Source Title">, le {{ wish.dateCreated|date('d/m/Y Ã  H:i') }}</cite></footer>
                    </blockquote>
                    <img src="{{ asset('img/wish.jpg') }}" class="card-img-bottom rounded w-50 h-auto mb-2" alt="wish image">
                </div>
            </div>
        </div>
    </div>
{% endblock %}